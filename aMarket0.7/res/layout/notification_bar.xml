<?xml version="1.0" encoding="utf-8"?>
<!-- 浮动提醒框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_bar"
    android:layout_width="fill_parent" 
    android:layout_height="42.6dp"
    android:background="@drawable/notify_update_selector"
    android:clickable="true">

    <!-- 指示器 -->
    <ImageView android:id="@+id/indicator"
        android:layout_width="21.4dp" 
        android:layout_height="21.4dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp" 
        android:layout_centerVertical="true"
        android:src="@drawable/notify_arrow" />

    <!-- 提醒内容 -->
    <TextView android:id="@+id/notification_content"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@id/indicator"
        android:singleLine="true"
        android:layout_alignParentLeft="true" />
     
</RelativeLayout>
