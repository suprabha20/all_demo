<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center_vertical" 
    android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
    android:padding="12dp"
	android:background="@drawable/list_item_bg_selector">
    
	<ImageView android:id="@+id/iv_icon" 
        android:layout_width="48dip"
		android:layout_marginRight="15dp" 
        android:layout_height="48dip"
		android:layout_alignParentTop="true" 
        android:layout_alignParentLeft="true" />

	<TextView android:id="@+id/tv_time"
		android:layout_alignParentRight="true" 
        android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
        android:singleLine="true"
		style="@style/list_font_s_normal" />

	<TextView android:id="@+id/tv_name" 
        android:layout_toLeftOf="@id/tv_time"
		android:layout_toRightOf="@id/iv_icon" 
        android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
        android:singleLine="true" 
        android:ellipsize="end"
		style="@style/list_font_m_normal" />

	<TextView android:id="@+id/tv_payment"
		android:layout_marginTop="4dp" 
        android:layout_alignParentRight="true"
		android:layout_below="@id/tv_time" 
        android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
        android:singleLine="true"
		style="@style/list_font_m_normal" />

	<TextView android:id="@+id/tv_description" 
        android:ellipsize="end"
		android:layout_below="@id/tv_name" 
        android:layout_toLeftOf="@id/tv_payment"
		android:layout_toRightOf="@id/iv_icon" 
        android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
        android:singleLine="true"
		android:layout_alignLeft="@id/tv_name" 
        android:layout_marginRight="5dp"
		style="@style/list_font_l_normal" />

</RelativeLayout>