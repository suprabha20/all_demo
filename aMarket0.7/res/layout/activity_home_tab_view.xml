<?xml version="1.0" encoding="utf-8"?>
<!-- TabWidget Spec -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="64dp" 
    android:background="@drawable/main_tab_bg_selector">

    <!-- icon -->
    <ImageView android:id="@+id/tab_widget_icon"
        android:layout_width="32dp" 
        android:layout_height="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" 
        android:layout_marginTop="5dp" />
    
    <!-- text -->
    <TextView android:id="@+id/tab_widget_content"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_widget_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2.6dp"
        android:layout_marginBottom="6dp"
        android:textAppearance="@style/app_text_style5" />

</RelativeLayout>
